        <!-- Deactivate checkstyle, findbugs, jacoco and pmd -->
        <checkstyle.skip>true</checkstyle.skip>
        <findbugs.skip>true</findbugs.skip>
        <jacoco.skip>true</jacoco.skip>
        <pmd.skip>true</pmd.skip>
        <enforcer.skip>true</enforcer.skip>

